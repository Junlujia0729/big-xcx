.swiper-tab{  
    width: 100%;  
    border-bottom: 2rpx solid #eee;  
    text-align: center;  
    padding: 20rpx 0;
    background: #fff;
}  
.swiper-tab-list{ 
  font-size: 30rpx;  
  display: inline-block;  
  width: 49.5%;  
  color: #333;  
  border-right:1px solid #eee;
}  
.swiper-tab-list:last-child{
  border-right:none;  
}
.on{ 
  color: #3ECCB3;  
}  
  
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }  


.coupon_1{
  height: 180rpx;
  border-radius:10rpx;
  margin: 20rpx 20rpx 0;
  overflow: hidden;
  position: relative;
  background: url(http://imgs.52jiaoshi.com/1513756743.png) no-repeat center;
  background-size:100% 180rpx; 
}
.coupon_1:last-of-type{margin-bottom:160rpx;} 
.coupon_price2{
  width: 200rpx;
  color: #ccc; font-size: 16px;
}
.coupon_price1{
  width: 200rpx;
  border-radius:5px;color: #ff6b49; font-size: 16px;
}
.coupon_price1 .price, .coupon_price2 .price{text-align: center;}
.coupon_price1 .price text, .coupon_price2 .price text{font-size: 80rpx;line-height:180rpx;

}
.coupon_price1 text,.coupon_price2 text{padding-left:10rpx;  font-size: 24rpx;line-height:24rpx;}
.right{
  margin: 50rpx 20rpx 0 220rpx;
}
.coupon_use{width: 160rpx; height: 60rpx;  border:1px solid #fff;border-radius: 20rpx; text-align: center; line-height: 60rpx;margin: 30rpx 10rpx 0 0;}
.l_float{float: left;}
.coupon_time{line-height: 80rpx;color:#9c9c9c;font-size: 24rpx;}
.use,.used{
  position: absolute;
  right:30rpx;
  top:70rpx;
  border:1px solid #ff6b49;
  border-radius: 10rpx;
  padding: 10rpx 14rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  color: #ff6b49;
}
.used{
  border:1px solid #ccc;
  color: #ccc;
}
.tips{
  color: #a9a9a9;
  margin: 40rpx auto;
  text-align: center;
  font-size: 28rpx;
}
.no-discount image{
  width: 310rpx;
  height: 280rpx;
  margin: 200rpx auto 20rpx;
  display: block;
}
.title{
  font-size: 24rpx;
  width: 300rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}

