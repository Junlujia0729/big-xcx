page{
  height: 100%;
}
.container {
  flex-direction: column;
  font-size: 32rpx;
  background: #fff;
}
.head {
  padding: 80rpx;
  line-height: 1;
}
.body {
  padding-left: 30rpx;
  flex: 1;
  overflow: auto;
}
.title {
  display: block;
  font-size: 52rpx;
}
.description {
  display: block;
  margin-top: 30rpx;
  color: #888;
  font-size: 28rpx;
}
.item {
 
  overflow: hidden;
  border-radius: 4rpx;
  cursor: pointer;
}
.item-info {
  margin-left: 60rpx;
  display: block;
  padding: 30rpx 30rpx 30rpx 0;
  align-items: center;
  flex-direction: row;
  font-size: 30rpx;
  color: #333;
  border-bottom:1px solid rgba(0,0,0,0.1);
}

.item-icon{
  width: 35rpx;
  height: 35rpx;
  float:left;
  vertical-align: middle;
  margin-top: 35rpx;
}
.item-name {
  flex: 1;
}
.item-img {
  width: 32rpx;
  height: 32rpx;
  float: right;
  margin-top: 5rpx;
}
.userinfo{
  padding: 30rpx;
  text-align: center;
}
.userheader{
  width: 126rpx;
  height: 126rpx;
  border-radius: 50%;
  vertical-align: middle;
  display: inline-block;
  /* margin-right: 30rpx; */
} 
.nickname{
  font-size: 30rpx;
  font-weight: bold;
  padding-top: 30rpx;
}
.line{
  width: 100%;
  height: 30rpx;
  background: #eee;
}
.getinfo{
  height: 50rpx;
  background: #3eccb3;
  color: #fff;
  line-height: 35rpx;
  text-align: center;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  display: inline-block;
  font-size: 28rpx;
} 

