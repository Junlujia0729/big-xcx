video {
width:100%;
height:100%;
display:inline-block;
line-height:0;
overflow:hidden;
position:relative;
}
.vodie-time{
  position:absolute;
  bottom:40rpx;
  left:30rpx;
  color:#ddd;
  font-size:22rpx; 
}
.vodie-classname{
  position:absolute;
  bottom:90rpx;
  left:30rpx;
  color:#fff;
  font-size:34rpx;   
}
.classlevel-line{
  border-bottom: 1px solid #ddd;
}
.classlevel .period{
  height: 100rpx;
  line-height: 100rpx;
  color: #666;
  font-size: 30rpx;
  padding-left:30rpx; 
  position: relative;

}
.classlevel-b{
    background: #f3f4f5;
}
.classlevel .period:last-child{
   border-bottom: none;
}
.classlevel .box{
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  background: #3eccb3;
  vertical-align: middle;
  margin-right: 20rpx;
}
.classlevel .icon{
  width: 20rpx;
  height: 12rpx;
  position: absolute;
  right:30rpx;
  top:40rpx;
  
}

.class_pic_bg_2 .play-icon{
  position: absolute;
  left:50%;
  top:50%;
  width:90rpx;
  height:90rpx;
  margin-left: -45rpx;
  margin-top: -45rpx;
}

