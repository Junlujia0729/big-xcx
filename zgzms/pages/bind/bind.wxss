.fix_mask{
  position: fixed;
  z-index: 999;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
}

.father {
  position: absolute;
  left: 0;
  width: 580rpx;
  height: 660rpx;
  background: #fff3e8;
  z-index: 9999;
}
.coup-tit{
  font-size: 36rpx;
  color: #ff830e;
  margin: 40rpx 0 25rpx;
  text-align: center;
}
.coup-con{
  padding: 0 30rpx 30rpx;
}
.coup-con view{
  font-size: 24rpx;
  line-height: 40rpx;
  color: #333;
}
#mobile {
  height: 80rpx;
  line-height: 80rpx;
  width: 70%;
  margin: 0 auto;
  padding-left: 20rpx;
  background: #fff;
  font-size: 30rpx;
}
.resets_line {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: none;
  padding: 0;
  position: relative;
  background: #fff;
}
.resets_line input {
  border: none;
  padding-left: 20rpx;
  display: inline-block;
  width:300rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;

}
.resets_line button {
    position: absolute;
    right:0;
    top:10rpx;
    height: 80rpx;
    width: 170rpx;
    background: #ff6b49;
    color: #fff;
    border-radius: 10rpx;
    float: right;
    font-size: 30rpx;
    line-height: 80rpx;
    padding: 0;
    z-index: 999;
}
.coup-content{
  position: fixed;
  width: 580rpx;
  height: 620rpx;
  left: 50%;
  top: 50%;
  margin-left: -290rpx;
  margin-top: -310rpx;
  z-index: 9999;
}
.buttons{
  position: absolute;
  z-index: 10001;
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 50rpx;
  bottom: 40rpx;
  left: 0;
  margin-left: 140rpx;
  padding: 0;
  background: #ff830e;
  color: #fff;
}
.buttons image{
  width: 100%;
  height: 100%;
}
.hide{
 display: none;
}
.show{
 display: block;
}

.container {
  display: block;
  padding: 0;
  background: #fff;
}
page{
  background: #f3f4f5;
}

.line {
  width: 2rpx;
  height: 100%;
  background-color: #ddd;
}

.userinfo{
  padding-left:30rpx; 
}
.userinfo .nickname{
  height: 100rpx;
  line-height: 100rpx;
  color: #666;
  font-size: 30rpx;
  border-bottom: 1px solid #ddd;
}
.userinfo .nickname:last-child{
   border-bottom: none;
}
.userinfo input{
  display: inline-block;
  vertical-align: middle;
  width: 70%;
}
.area{
  position: relative;
}
.area image{
  position: absolute;
  right:100rpx;
  top:10rpx;
  width: 200rpx;
  height: 80rpx;
}
.area .refresh{
  position: absolute;
  right:25rpx;
  top:25rpx;
  width: 50rpx;
  height: 50rpx;
}
.refresh image{
  position: absolute;
  right:0;
  top:0;
  width: 50rpx;
  height: 50rpx;
}
.area #yzm{
  width: 70%;
}
.address{
  display: inline-block;
  padding-left: 30rpx;
}

textarea{
  font-size: 28rpx;
  padding: 20rpx 20rpx 20rpx 0;
  color: #666;
  width: 95%;
  margin-right:20rpx;
  display: block;
  padding-right:20rpx; 
}
.footer{
  margin-top: 34rpx;
  background: #ff6b49;
  width: 690rpx;
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  color: #fff;
  font-size: 36rpx;
  border-radius: 10rpx;
}
.tips{
  color:#fc645f;
  font-size:30rpx;
  margin-top:20rpx;
  text-align: center;
}
.explain{
  width: 580rpx;
  height: 211rpx;
  margin: 40rpx auto 54rpx;
  background: url(http://imgs.52jiaoshi.com/1512390540.png) no-repeat;
  background-size:100% 100%; 
  position: relative;
  padding: 48rpx 0 0 21rpx;
}
.explain-tit{
  position: absolute;
  left: 0;
  top:-20rpx;
  text-align: center;
  color: #3eccb3;  
  width: 100%;
  font-size: 30rpx;
}
.explain-info{
  font-size: 26rpx;
  color: #666;
  line-height: 24rpx;
  padding-bottom: 22rpx;
}
.title{
  height: 110rpx;
  width: 100%;
  background: #f3f4f5;
  color: #3eccb3;
  line-height: 110rpx;
  text-align: center;
  font-size: 34rpx;
}
.title .word{
  display: inline-block;
  margin: 0 14rpx;
}
.title .line{
  display: inline-block;
  width: 60rpx;
  height: 1px;
  vertical-align: middle;
  background: #3eccb3;
}
.userinfo .box{
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  background: #3eccb3;
  vertical-align: middle;
  margin-right: 20rpx;
}
