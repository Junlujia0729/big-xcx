
.container{
  width: 100%;
  height: 100%;
  position: relative;
}
.pic{
  width: 100%;
  display: block;
}
.content{
  position: absolute;
  left: 0;
  top:0;
  padding-top: 100rpx;
  color: #fff;
  text-align: center;
  width: 100%;
}
.cheak-btn{
  position: absolute;
  left:20rpx;
  top:32rpx;
  width: 138rpx;
  height: 48rpx;
  border:1px solid #fff;
  text-align: center;
  line-height: 48rpx;
  font-size: 28rpx;
  color: #fff;
  border-radius: 8rpx;
}
.balance{
  font-size: 34rpx;
  line-height: 34rpx;
  padding-bottom: 38rpx;
}
.price{
  font-size: 84rpx;
  padding-bottom: 52rpx;
  line-height: 84rpx;
}
.canuse{
  font-size: 34rpx;
  padding-bottom: 32rpx;
  line-height: 34rpx;
}
.can-price{
  font-size: 42rpx;
  padding-bottom: 160rpx;
  line-height: 42rpx;
}
.take-btn{
  width: 710rpx;
  height: 98rpx;
  margin: 0 auto 70rpx;
  border-radius: 50rpx;
  color: #ee3d43;
  font-size: 36rpx;
  line-height: 98rpx;
  text-align: center;
  background: #fff;
  font-weight: 600;
}
.rule{
  font-size: 28rpx;
}
.no{
  background: #eee;
}
.tips{
  font-size:24rpx;padding:0 60rpx;text-align:left;
}
.tips view{
  line-height: 24rpx;
  padding-bottom: 24rpx;
}
view.contact_btn{
  position: fixed;
  right:40rpx;
  bottom:60rpx;
  padding:0 0 0 0;
  background-color:transparent;
  width:118rpx;
  height:118rpx;
  border:none;
}
view.contact_btn::after{
  border:none;
}
.contact_btn image{
  width:118rpx;
