.classdetail{
  height: 48rpx;
  padding:20rpx 30rpx;
  background: #f5f5f5;
  font-size: 30rpx;
  color: #666;
}
.notice-icon{
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  border-radius: 50%;
}
.classdetail text{
  padding-left: 20rpx;
}
.content img{
  width: 100%;
  height: 100%;
}
.more_news{
  margin:5rpx 100rpx 0 65%;
  text-align: center;
  border-radius: 10rpx;
  color: #ff6b49;
  font-size: 32rpx;
  height:70rpx;
  line-height:70rpx;
  position: relative;
}
.more_news image{
  width: 38rpx;
  height: 38rpx;
}
.more_news text{
  padding:2rpx 8rpx;
  height: 30rpx;
  line-height: 30rpx;
  background: #ff6b49;
  color: #fff;
  border-radius: 15rpx;
  font-size: 22rpx;
  position: absolute;
  right:30rpx;
  top:-8rpx;
  display: inline-block;
}
.buy{
  float: left;
  width: 55%;
  text-align:center;
  display:block;
  border-radius:8rpx;
  background:#ff6b49;
  color:#fff;
  font-size:32rpx;
  height:70rpx;
  line-height:70rpx;
  margin-left:5%;
}


.btn-buy{
  width: 95%;
  text-align:center;
  display:block;
  border-radius:8rpx;
  background:#ff6b49;
  color:#fff;
  font-size:32rpx;
  height:70rpx;
  line-height:70rpx;
  margin:5rpx 20rpx; 
}
.content{
  padding: 12rpx 24rpx;
  color: #666;
  text-align:left !important;
}
.content view{
  margin-bottom: 20rpx;
  line-height: 50rpx;
  font-size: 26rpx;
}  

.header{
  padding: 30rpx;
  border-bottom:1px solid #e9e9e9;
}
.play{
  width: 160rpx;
  float: right;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}
.play image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.progress{
  padding-top: 26rpx;
  padding-left: 30rpx;
}
.message{
  font-size: 28rpx;
  color: #999;
}
.title{
  font-size: 28rpx;
  font-weight: bold;
  color: #333; 
  padding-bottom: 30rpx;
}
.sub-title{
  font-size: 26rpx;
  color: #666;
  padding-bottom: 30rpx;
}


/*音频播放  */
audio{
  display: none !important;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}
.song-list{
  padding-bottom: 80px;
  color: #666;
}
.song-item {
  display: flex;
  padding: 10px;
}
.song-item.even{
  background: #f3f3f3;
}
.song-item.current{
  color: #31c27c;
}
.song-item .song-no{
  width: 30px;
}
.song-item .song-name{
  flex: 1;
}
.footer{

  background: #31c27c;
  color: #fff;
}
.song-info{
  display: flex;
  height: 30px;
  line-height: 30px;
  padding: 0 20px;
}
.song-info .song-name{
  flex: 1;
  overflow: hidden;
}
.song-info .song-time{
  width: 50px;
  text-align: right;
}


/*播放器*/
.aplayer_box{
  background: #fff;
  padding:40rpx 30rpx;
}
.aplayer_controls{
  position: relative;
}
.aplayer_controls .btn_box{
  margin: 0 auto;
  height:124rpx;
  line-height:124rpx;
  width:350rpx;
}
.aplayer_controls .btn_box .btn_prev,.aplayer_controls .btn_box .btn_next{
  display: inline-block;
  vertical-align: middle;
  width: 41rpx;
  height: 50rpx;
}
.aplayer_controls .btn_box .btn_prev{
  margin-right:72rpx;
}
.aplayer_controls .btn_box .btn_next{
  margin-left:72rpx;
}
.aplayer_controls .btn_box .btn_play{
  display: inline-block;
  vertical-align: middle;
  width: 124rpx;
  height: 124rpx;
}
.aplayer_controls .btn_mode{
  position: absolute;
  width: 44rpx;
  height: 39rpx;
  right: 50rpx;
  top: 53rpx;/*124-39/2*/
}
.aplayer_progress__bar{
  padding:32rpx;
  height:32rpx;
  position: relative;
}
.aplayer_progress__bar text{
  float:left;
  width:100rpx;
  height:32rpx;
  line-height: 32rpx;
  font-size:24rpx;
  text-align: left;
  color:#999999;
}
.aplayer_progress__bar text.right{
  float:right;
  text-align: right;
}
.aplayer_progress__bar .process{
  margin-left:100rpx;
  margin-right:100rpx;
  margin-top:12rpx;
}
.aplayer_progress__bar .dragbar{
  position: absolute;
  width:32rpx;
  height:32rpx;
  background: #fff;
  box-shadow: 0 0 0 2rpx rgba(0,0,0,0.1);
  border-radius: 32rpx;
  bottom:32rpx;
  left:124rpx;/*48 + 100 - 24*/
}

