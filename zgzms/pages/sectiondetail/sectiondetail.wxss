page{
  background: #fff;
  padding-bottom: 98rpx;
}


#content_slide1{
  padding-left:24rpx; 
  padding-right:24rpx; 
  overflow: hidden;
}
#content_slide1 .item{
  border-bottom: 1px solid #eee;
}

.btn{
  position: fixed;
  bottom:0;
  left:0;
  height: 80rpx;
  line-height: 80rpx;
  background: #fefefe;
  border-top: 1px solid #fbfbfb;
  width: 100%;
}

.pay{
    text-align: center;
    display: block;
    border-radius: 8rpx;
    background: #ff6b49;
    color: #fff;
    font-size: 32rpx;
    height: 70rpx;
    line-height: 70rpx;
