/* pages/jobs/pages/savevideo/savevideo.wxss */
page{
  width:100%;
  height: 100%;
  position: relative;
}
.process-box{
  position: absolute;
  width:100%;
  height: 10px;
  bottom: 300rpx;
}
.process-box .process{
  position: relative;
  padding:3px 50rpx;
}
.process-bar,.process-bar-done{
  height:4px;
  border-radius: 4px;
}
.process-bar{
  background: rgba(255, 255,255, 0.4);
  z-index:1;
}
.process-bar-done{
  background: #3eccb3;
  width:100rpx;
  position: absolute;
  left:50rpx;
  top: 3px;
  z-index:10;
}
.process-slider{
  position: absolute;
  top:0;
  height:10px;
  width:10px;
  border-radius: 10px;
  background: #3eccb3;
  z-index:100;
  line-height: 1;
  margin: 0;
}
.oper-box .oper{
  padding:0 50rpx;
  position: relative;
  display: flex;
}
.oper-box .oper .oper-flex{
  flex:1;
}
.oper-flex cover-image{
  display: block;
}