/* pages/jobs/pages/createvideo/createvideo.wxss */
page{
  width:100%;
  height: 100%;
  position: relative;
}
.process-box{
  position: absolute;
  width:100%;
  height: 10px;
  bottom: 300rpx;
}
.process-box .process{
  position: relative;
  padding:3px 50rpx;
}
.process-bar,.process-bar-done{
  height:4px;
  border-radius: 4px;
}
.process-bar{
  background: rgba(255, 255,255, 0.4);
  z-index:1;
}
.process-bar-done{
  background: #3eccb3;
  width:100rpx;
  position: absolute;
  left:50rpx;
  top: 3px;
  z-index:10;
}
.process-slider{
  position: absolute;
  top:0;
  height:10px;
  width:10px;
  border-radius: 10px;
  background: #3eccb3;
  z-index:100;
  line-height: 1;
  margin: 0;
}
.oper-box .oper{
  padding:0 50rpx;
  position: relative;
  display: flex;
}
.oper-box .oper .oper-flex{
  flex:1;
}
.oper-redo{
  text-align: right;
}
.redo{
  text-align: center;
  margin-top:40rpx;
  padding:14rpx 20rpx;
  border:2rpx solid #fff;
  font-size:14px;
  color:#fefefe;
  border-radius: 42rpx;
  line-height: 1.4;
}
.oper-time{
  margin:46rpx 0 0 36rpx;
  font-size:24px;
  color:#fefefe;
}
.flash-box{
  position: absolute;
  top:64rpx;
  right:30rpx;
  height:58rpx;
  width:168rpx;
}
.flash-box cover-image{
  display: inline-block;
  vertical-align: middle;
}