.container {
  display: block;
  padding: 0;
  background: #fff;
}
page{
  background: #f3f4f5;
}

.line {
  width: 2rpx;
  height: 100%;
  background-color: #ddd;
}

.address{
  display: inline-block;
  padding-left: 30rpx;
}

.footer{
  background: #3eccb3;
  display: block;
  margin: 40rpx auto 0;
  width: 690rpx;
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  color: #fff;
  font-size: 34rpx;
  border-radius: 10rpx;
}

.tips{
  color:#fc645f;
  font-size:30rpx;
  margin-top:20rpx;
  text-align: center;
}
.explain{
  width: 525rpx;
  height: 130rpx;
  margin: 60rpx auto 70rpx;
  background: url(http://imgs.52jiaoshi.com/1512635256.png) no-repeat;
  background-size:100% 100%; 
  position: relative;
  padding: 60rpx 0 0 80rpx;
}
.explain-tit{
  position: absolute;
  left: 0;
  top:-20rpx;
  text-align: center;
  color: #3eccb3;  
  width: 100%;
  font-size: 30rpx;
}
.explain-info{
  font-size: 26rpx;
  color: #666;
  line-height: 24rpx;
  padding-bottom: 22rpx;
}
.title{
  height: 110rpx;
  width: 100%;
  background: #f3f4f5;
  color: #3eccb3;
  line-height: 110rpx;
  text-align: center;
  font-size: 34rpx;
}
.title .word{
  display: inline-block;
  margin: 0 14rpx;
}
.title .line{
  display: inline-block;
  width: 60rpx;
  height: 1px;
  vertical-align: middle;
  background: #3eccb3;
}
.userinfo .box{
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  background: #3eccb3;
  vertical-align: middle;
  margin-right: 20rpx;
}
#zjhm{
  width: 75%;
}
.name{
  display: inline-block;
  width: 140rpx;
  text-align:justify;
}
:-ms-input-placeholder{
  color: #f5f5f5;
}
::-webkit-input-placeholder{
  color: #f5f5f5;
}


.state{
  font-size: 24rpx;
  color: #3eccb3;
  border-top:1px solid #f5f5f5;
  height: 90rpx;
  line-height: 90rpx;
  position: relative;
}
.state button{
  width: 90rpx;
  height: 38rpx;
  line-height: 38rpx;
  text-align: center;
  color: #ff6b49;
  background: #fff;
  border-radius: 10rpx;
  display: inline-block;
  position: absolute;
  right: 30rpx;
  top:25rpx;
  border:1px solid #ff6b49;
  font-size: 24rpx;
  padding: 0;
}
.state button::after{
  content: '';
  border:none;
}

.state .overdue{
  color: #ddd;
  border:1px solid #ddd;
}
.clock{
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
}