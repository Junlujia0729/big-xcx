/* pages/mine/mine.wxss */
page{
  background: #f5f5f5;
}
.curriculum_list {
    position: relative;
    background: #fff;
    border-left: none;
    border-right: none;
    padding-left: 24rpx;
    margin-bottom: 20rpx;
}
.curriculum_list_info {
    padding-right: 24rpx;
    display: block;
}
.curriculum_list_info .class_names {
    display: inline-block;
    text-align: left;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 100%;
    font-size: 32rpx;
    line-height: 32rpx;
    padding: 30rpx 30rpx 0 0;
}
.curriculum_list .keep {
    color: #999;
    padding-right: 24rpx;
}
.curriculum_list_info .start_time {
    margin: 0 0 24rpx 0px;
    color: #999;
    font-size: 24rpx;
}

.container{
  padding: 0 53rpx;
}
.classtype{
  width: 534rpx;
  height: 186rpx;
  background: #fff;
  padding: 70rpx 45rpx 0;
  margin:64rpx auto 0;
  border-radius: 10rpx;
  font-size: 30rpx;
  text-align: center;
}
.classtype view{
  margin-bottom: 48rpx;
  font-size: 30rpx;
  color: #333;
}
.classtype .go-class{
  width: 100%;
  height: 78rpx;
  background: #ff6b49;
  line-height: 78rpx;
  color: #fff;
  font-size: 34rpx;
  border-radius: 5rpx;
}
.header{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #333;
  font-size: 24rpx;
}
.start_time{
  font-size: 24rpx;
  color: #999;
  padding:10rpx 0 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
}
