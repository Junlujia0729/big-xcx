/* pages/mine/mine.wxss */

@import"../../../../wxParse/wxParse.wxss";
page{
  background: #f5f5f5;
  font-size: 28rpx;
}
.container{
  background: #fff;
  padding:60rpx 30rpx;
  margin-bottom:20rpx;
}
.container_1{
  background: #fff;
  padding:30rpx 30rpx;
  margin-bottom:100rpx;
}
.title{
  font-size: 34rpx;
  color: #333;
  padding-bottom:20rpx;
  line-height: 34rpx;
}
.message{
  height: 28rpx;
  line-height: 28rpx;
}
.data{
  font-size: 26rpx;
  color: #999;
  padding-right: 10rpx;
}
.teachername{
  font-size: 26rpx;
  color: #999;
}
.content-ac{
  padding:50rpx 0 20rpx;
  font-size: 30rpx;
  color: #666;
  line-height: 50rpx;
  
}
.tips{
  color: #3eccb3;
  font-size: 28rpx;
  line-height: 28rpx;
}
.content-ac image{
  width: 100% !important;
  margin: 40rpx auto; 
  border-radius:10rpx;
  box-shadow: 0 0 8rpx 8rpx rgba(102, 102, 102, .2);
}

.content{
  /* padding: 20rpx; */
}
.content image{
  width: 216rpx;
  height: 216rpx;
  margin: 10rpx;
}
.line{
  height: 20rpx;
  background: #f5f5f5;
}
.review{
  height: 80rpx;
}
.review_teacher{
  font-size: 28rpx;
  text-align: right;
}
.review_data{
  font-size: 28rpx;
  color: #666;
  text-align: right;
}
.review_title{
  width: 60%;
  font-size: 34rpx;
  line-height: 80rpx;
  height: 80rpx;
}
.review_comment{
  font-size: 28rpx;
  color: #333;
  line-height: 42rpx;
  padding-top: 20rpx;
}

.margin0{
  margin-bottom: 0;
}
video{
  width: 100%;
  height: 420rpx;
}
.audio-icon{
  margin: 30rpx auto;
  height: 124rpx;
  line-height: 124rpx;
  width: 380rpx;
}
.audio-icon .btn_prev,.audio-icon .btn_next{
  display:inline-block;
  vertical-align: middle;
  width: 42rpx;
  height: 50rpx;
}
.audio-icon .btn_prev{
  margin-right:72rpx;
}
.audio-icon .btn_next{
  margin-left:72rpx;
}
.audio-icon .btn_play{
  display:inline-block;
  vertical-align: middle;
  width: 124rpx;
  height: 124rpx;
}

slider{
  width: 580rpx;
  height: 10rpx;
  margin-bottom:30rpx;
}
.countent .wx-slider-handle{
  width:30rpx;
  height:30rpx;
  top:8px;
}
.duration{
  position: absolute;
  right:30rpx;
  top:208rpx;
  color: #999;
  font-size:26rpx;
}