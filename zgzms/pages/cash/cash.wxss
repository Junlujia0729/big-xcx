
.container{
  width: 100%;
  height: 100%;
}
.header{
  height: 176rpx;
  padding-top:54rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666; 
}
.header .price{
  font-size: 56rpx;
  color: #333;
  padding-top: 30rpx;
  font-weight: 600;
}
.header .price text{
  font-size: 28rpx;
  color: #333;
  display: inline-block;
  padding-left: 10rpx;
}
.line{
  height: 20rpx;
  background: #f5f5f5;
}
.content{
  padding:0 30rpx;
  font-size: 24rpx;
  color: #999;
}
.tip{
  font-size: 30rpx;
  color: #333;
  padding: 30rpx 0 30rpx;
}
input{
  width: 670rpx;
  height: 86rpx;
  border:1px solid rgba(0, 0, 0, .1);
  border-radius: 8rpx;
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #333;
}
.tips{
  padding: 46rpx 0;
  
}
.tips view{
  font-size: 24rpx;
  color: #999;
  line-height: 24rpx;
  padding-bottom: 20rpx;
}
.btn{
  width: 690rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
  background: #3eccb3;
  font-size: 34rpx;
  border-radius: 8rpx;
  border:none;
}
.mask{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.4);
  position: fixed;
  top:0;
  left: 0;
}
.mask-content{
  width: 560rpx;
  height: 290rpx;
  position: absolute;
  left: 50%;
  top:50%;
  margin-left: -280rpx;
  margin-top: -195rpx;
  background: #fff;
  font-size: 30rpx;
  line-height: 30rpx;
  border-radius: 10rpx;
  text-align: center;
  color: #333;
  z-index: 999;
}