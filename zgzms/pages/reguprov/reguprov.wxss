/* pages/reguprov/reguprov.wxss */
/**banner**/
.swiper__item{
    display: block;
    width: 100%;
}

/* header 部分导航 */
.header{
    width: 100%;
    background-color: #fff;
    font-size: 32rpx;
    align-items: center;
    height: 86rpx;
    position: relative;
}
.sv-manager{
  float:right;
  height:72rpx;
  line-height:72rpx;
  margin-right:30rpx;
}
.sv-manager image{
  vertical-align: middle;
  width: 80rpx;
}
.sv__container{
    margin-right:130rpx;
    margin-left:30rpx;
    height: 76rpx;
    white-space: nowrap;
}
.sv__item{
    padding: 20rpx;
    display: inline-block;
}
.sv__item.active{
  color:#3eccb3;
  padding-bottom: 16rpx;
  border-bottom: 4rpx solid #3eccb3;
}
/**城市列表**/
.city_list{
  background: #f3f4f5;
  padding:15rpx;
}
.city_list::after{
  clear:both;
}
.city_list .city_item{
  float:left;
  width:20%;
}
.city_list .city_item view{
  padding:15rpx;
}
.city_list .city_item text{
  font-size:30rpx;
  color:#999999;
  width:120rpx;
  height:60rpx;
  border:1rpx solid #cccccc;
  background: transparent;
  text-align: center;
  line-height: 60rpx;
  display: inline-block;
  border-radius: 60rpx;
}
.city_list .city_item.active text{
  color:#fff;
  background: #3eccb3;
  border:1rpx solid #3eccb3;
}
.regu_item{
  padding:40rpx 30rpx;
  border-bottom: 10rpx solid rgba(0,0,0,0.1);
  position: relative;
}
.regu_item_2{
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
}
.regu_item_2:last-child{
  border-bottom: none;
  padding-bottom: 0;
}
.regu_item .regu_item_area,.regu_item .regu_item_stat{
  font-size:24rpx;
  color:#999999;
}
.regu_item .regu_item_title{
  margin-top:14rpx;
  font-size:32rpx;
  color:#333333;
  line-height: 44rpx;
}
.regu_item .regu_item_stat{
  margin-top:10rpx;
}
.regu_item_stat{
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.regu_item_stat text{
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  width: 100%;
  text-align: center;
  color:#999999;
}
.regu_item_stat text.left{
  text-align: left;
}
.regu_item_stat text.right{
  text-align: right;
}
.regu_item_tixing{
  position: absolute;
  right:30rpx;
  bottom:40rpx;
}
.regu_item_tixing button{
  height:56rpx;
  font-size:30rpx;
  line-height: 56rpx;
  background-color: #3eccb3;
  color:#fff;
  border:none;
}
.area_header{
  padding:30rpx 30rpx 10rpx 30rpx;
  text-align: center;
}
.area_header view{
  margin: 0 auto;
  background-color: #e9e9e9;
  padding:20rpx;
  display: inline-block;
  border-radius: 10rpx;
}
.area_header view text{
  margin:0 14rpx;
  color:#333333;
  font-size:32rpx;
  height: 32rpx;
  line-height: 32rpx;
}
.area_header view image{
  vertical-align: middle;
}

/*总菜单容器*/
.menu {
 	display: block;
	height: 38px;
	position: relative;
}

.menu_dt{
  display: flex;
  display: -webkit-flex;
}

/*一级菜单*/
.menu dt {
	font-size: 15px;
	/*hack*/
	flex: 1;
  -webkit-box-flex: 1;
	height: 38px;
	border-bottom: 1rpx solid rgba(0,0,0,0.1);
	text-align: center;
	background-color: #f4f4f4;
	color: #333333;
	line-height: 38px;
	z-index: 2;
}
.menu dt.prov{
  border-right: 1rpx solid rgba(0,0,0,0.1);
  border-left: 1rpx solid rgba(0,0,0,0.1);
}

.menu dt image{
  vertical-align: middle;
  margin-left:10rpx;
  margin-top:-4rpx;
}

/*二级菜单外部容器样式*/
.menu dd{
	position: absolute;
	width: 100%;
	/*hack*/
	/*top:-170px;*/
	/* bottom: 0; */
  top:39px;
	left:0;
  max-height: 300px;
  overflow-y: scroll;
	z-index:1000;
}

/*二级菜单普通样式*/
.menu li{
	font-size: 14px;
	line-height: 34px;
	color: #333333;
	height: 34px;
	display: block;
	padding-left: 8px;
	background-color: #fff;
	border-bottom: 1px solid rgba(0,0,0,0.1);
}

/*二级菜单高亮样式*/
.menu li.highlight{
	background-color: #f3f4f5;
	color: #3eccb3;
}

/* 显示与隐藏 */
.show {
	/*display: block;*/
	visibility: visible;
}

.hidden {
	/*display: none;*/
	visibility:hidden;
}
.fix_mask{
  position: fixed;
  z-index: 900;
  top: 165px;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
}