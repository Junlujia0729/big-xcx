/* pages/download/score.wxss */
.picture{
  
  width: 600rpx;
  height: 1068rpx;
  margin: 20rpx auto;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}
.picture image{
  display: block;
  width: 100%;
  height: 100%;
}
.btn{
  position: fixed;
  bottom:20rpx;
  left:46rpx;
}
.btn .imageDown{
  display: inline-block;
  width: 320rpx;
  height: 76rpx;
  border-radius: 10rpx;
  color: #ff6b49;
  text-align: center;
  line-height: 76rpx;
  border: 1px solid #ff6b49;
  margin-right: 20rpx; 
  background: #fff;
}
.btn .share{
  display: inline-block;
  width: 320rpx;
  height: 78rpx;
  border-radius: 10rpx;
  color: #fff;
  text-align: center;
  line-height: 78rpx;
  background: #ff6b49;
}
.name{
  position: absolute;
  top:90rpx;
  left:0;
  text-align: center;
  color: #fff;
  width: 100%;
}
.btn button{
  overflow: none;
}