/* pages/regudetail/regudetail.wxss */
@import "../common/dynamic.wxss";
.dyn_item_cont{
  font-size:28rpx;
}
@import"../../wxParse/wxParse.wxss";
page{
  padding-bottom: 118rpx;
}

.reguoper{
  position: fixed;
  bottom: 0;
  left:0;
  right:0;
  height:108rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  /* background: #fff;
  box-shadow: 0 0 2px rgba(0, 0, 0, 0.1); */
  background: #3eccb3;
}
.reguoper_item{
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  text-align: center;
  height:88rpx;
  line-height: 88rpx;
  color:#fff;
  font-size:30rpx;
}
.reguoper_item view{
  border-left: 1rpx solid #fff;
  height:30rpx;
  line-height:30rpx;
  text-align: center;
  margin-top:35rpx;
}
.reguoper_item view.noborder{
  border-left:none;
}
.reguoper_item image{
  width:36rpx;
  height:36rpx;
  vertical-align: middle;
  margin-right:10rpx;
}
.reguoper .reguoper_item.active{
  background: #3eccb3;
  color:#fff;
}
.moreoper{
  position: fixed;
  bottom:176rpx;
  right:40rpx;
}
.moreoper_box{
  position: relative;
}
image.more_button{
  width:100rpx;
  height:100rpx;
  border-radius: 100rpx;
  position: absolute;
  right:0;
  bottom:0;
}
.moreoper .more_list{
  background: rgba(0,0,0,0.7);
  color:#fff;
  padding:10rpx 60rpx 10rpx 60rpx;
  border-radius: 100rpx;
  display: none;
  height:80rpx;
}
.moreoper .more_list.active{
  display: block;
}
.moreoper .more_list .more_list_item{
  display: inline-block;
  text-align: center;
  margin-right:80rpx;
}
.moreoper .more_list .more_list_item button{
  background: transparent;
  padding-left:0;
  padding-right:0;
  border:none;
  color:#fff;
  padding-top:0;
  padding-bottom: 0;
  margin-left:0;
  margin-right: 0;
}

.moreoper .more_list button.more_list_item::after{
  display: none;
}
.moreoper .more_list .more_list_item image{
  width:42rpx;
  height:42rpx;
  display: block;
  margin:0 auto;
}
.moreoper .more_list .more_list_item  text{
  font-size:26rpx;
  display: block;
  height:38rpx;
  line-height: 38rpx;
}
.fix_mask {
  position: fixed;
  z-index: 100;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,0.6);
}
.filelist{
    position: absolute;
    width: 620rpx;
    height: 630rpx;
    left:50%;
    top:50%;
    margin-left: -310rpx;
    margin-top: -315rpx;
    background: #fff;
    border-radius: 12rpx;
}
.filelist_title{
  height:100rpx;
  text-align: center;
  font-size:32rpx;
  line-height: 100rpx;
}
/* ::-webkit-scrollbar{
  width: 5rpx;
   color: transparent; 
} */
.close {
    position: absolute;
    width: 48rpx;
    height: 48rpx;
    right:45rpx;
    top:260rpx;
    z-index: 999;
}
.filelist_item{
  padding:40rpx;
  border-top:1rpx solid #ccc;
}
.filelist_item button{
  float:right;
  width:130rpx;
  height:60rpx;
  line-height: 60rpx;
  font-size:30rpx;
  text-align: center;
  background: #3eccb3;
  color:#fff;
}
.filelist_item text{
  font-size:30rpx;
  /* margin-right:80rpx; */
  color:blueviolet;
}