/* pages/practice/chapter/index.wxss */
page{
  background: #f5f5f5;
}
.title{
  padding: 38rpx 0;
  font-size: 28rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.title .item{
  width: 33%;
  float: left;
  text-align: center;
  border-right:1px dashed #ddd;
}
.title .item:last-child{
  border-right:none;
}
.title .item .item-name{
  padding-bottom: 32rpx;
  color: #3eccb3;
}
.title .item image{
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.title .item .item-num {
  width: 182rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border: 1px solid #3eccb3;
  border-radius:20rpx;
  margin: 20rpx auto; 
  color: #3eccb3;
}
.title .item .total{
  color: #999;
}
.message{
  height: 100rpx;
  padding:40rpx 30rpx;
  background-color: #fff;
  border-bottom:1px solid #f5f5f5; 
  background-image: url(http://imgs.52jiaoshi.com/1512120074.png);
  background-repeat: no-repeat;
  background-position: 95% center;
  background-size: 46rpx 46rpx;
}
.message-name{
  margin-bottom: 20rpx;  
  font-size: 30rpx;
  color: #333;
}
progress{
  width: 280rpx;
  display: inline-block;
  margin:0 20rpx 0 28rpx;
  vertical-align: middle;
}
.important{
  display: inline-block;
  width: 140rpx;
}
.message-data text{
  font-size: 28rpx;
  color: #999;
}
.message-data image{
  width: 25rpx;
  height: 22rpx;
  margin-right: 5rpx;
}