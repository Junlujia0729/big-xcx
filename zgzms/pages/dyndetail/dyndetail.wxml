<view class="sub_reply_box {{replay_to_user == '' ? '' : 'active'}}">
  <form report-submit="true" bindsubmit="submitReply">
    <view class="sub_c_b_input_box">
      <view class="textarea_box">
        <input bindconfirm='confirmReply' auto-focus type="text" placeholder="回复{{replay_to_user}}..." name="replay_text" confirm-type='send' bindinput="textAreaInput" value="{{const_reply_text}}" maxlength="300" cursor-spacing="15" />
