/* pages/queryscore/queryscore.wxss */
.container {
  display: block;
  padding: 0;
  background: #fff;
}
page{
  background: #f3f4f5;
}

.line {
  width: 2rpx;
  height: 100%;
  background-color: #ddd;
}

.userinfo{
  padding-left:30rpx; 
}
.userinfo .nickname{
  height: 100rpx;
  line-height: 100rpx;
  color: #666;
  font-size: 30rpx;
  border-bottom: 1px solid #ddd;
}
.userinfo .nickname:last-child{
   border-bottom: none;
}
.userinfo input{
  display: inline-block;
  vertical-align: middle;
  margin-left: 20rpx;
  width: 70%;
}
.area{
  position: relative;
}
.area image{
  position: absolute;
  right:100rpx;
  top:10rpx;
  width: 200rpx;
  height: 80rpx;
}
.area .refresh{
  position: absolute;
  right:25rpx;
  top:25rpx;
  width: 50rpx;
  height: 50rpx;
}
.refresh image{
  position: absolute;
  right:0;
  top:0;
  width: 50rpx;
  height: 50rpx;
}
.area #yzm{
  width: 70%;
}
.address{
  display: inline-block;
  padding-left: 30rpx;
}

textarea{
  font-size: 28rpx;
  padding: 20rpx 20rpx 20rpx 0;
  color: #666;
  width: 95%;
  margin-right:20rpx;
  display: block;
  padding-right:20rpx; 
}
.footer{
  margin-top: 34rpx;
  background: #ff6b49;
  width: 690rpx;
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  color: #fff;
  font-size: 36rpx;
  border-radius: 10rpx;
}
.tips{
  color:#fc645f;
  font-size:30rpx;
  margin-top:20rpx;
  text-align: center;
}
.explain{
  width: 560rpx;
  height: 211rpx;
  margin:30rpx auto 34rpx;
  background: url(http://imgs.52jiaoshi.com/1512390540.png) no-repeat;
  background-size:100% 100%; 
  position: relative;
  padding: 48rpx 0 0 41rpx;
}
.explain-tit{
  position: absolute;
  left: 0;
  top:-20rpx;
  text-align: center;
  color: #3eccb3;  
  width: 100%;
  font-size: 30rpx;
}
.explain-info{
  font-size: 26rpx;
  color: #666;
  line-height: 24rpx;
  padding-bottom: 22rpx;
}
.title{
  height: 60rpx;
  width: 100%;
  background: #f3f4f5;
  color: #3eccb3;
  line-height: 60rpx;
  text-align: center;
  font-size: 34rpx;
}
.title .word{
  display: inline-block;
  margin: 0 14rpx;
}
.title .line{
  display: inline-block;
  width: 60rpx;
  height: 1px;
  vertical-align: middle;
  background: #3eccb3;
}
.userinfo .box{
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  background: #3eccb3;
  vertical-align: middle;
  margin-right: 20rpx;
}
#zjhm{
  width: 75%;
}
.name{
  display: inline-block;
  width: 140rpx;
  text-align:justify;
}
:-ms-input-placeholder{
  color: #f5f5f5;
}
::-webkit-input-placeholder{
  color: #f5f5f5;
}
.Logo{
  width: 318rpx;
  height: 40rpx;
  margin: 130rpx auto;
  border-radius: 10rpx;
  overflow: hidden;
}
.Logo image{
  width: 100%;
  height: 100%;
  display: block;
}