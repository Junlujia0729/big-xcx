.textarea_box{
  padding:30rpx;
  background: #fff;
}
.textarea_box textarea{
  height:300rpx;
  font-size:30rpx;
  color:#333333;
}
.image_box{
  border-top: 1rpx solid #e5e5e5;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  padding:30rpx;
  background: #fff;
}
.image_box .select_box{
  display: inline-block;
  width:180rpx;
  height:180rpx;
  position: relative;
  margin-right: 50rpx;
}
.image_box .select_box .select{
  width:180rpx;
  height:180rpx;
  z-index: 90;
}
.image_box .select_box .close{
  position: absolute;
  width:34rpx;
  top:-17rpx;
  right:-17rpx;
  z-index:100;
  display:none;
}
.image_box .select_box .close.active{
  display:block;
}
.button_box{
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  padding:30prx 0;
}
.button_box button {
  margin:30rpx;
  padding:0;
}
.button_box button.cancel{
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  color:#999999;
  background: #fff;
}
.button_box button.submit{
  -webkit-box-flex: 2;
  -webkit-flex: 2;
  -ms-flex: 2;
  flex: 2;
  color:#fff;
  background: #ccc;
}
.button_box button.submit.active{
  background: #3eccb3;
}

/*音频  */
.start{
  width: 140rpx;
  height: 140rpx;
  margin: 222rpx auto 70rpx;
  display: block;
}
.content{
   border-top: 1rpx solid #e5e5e5; 
  padding:30rpx 30rpx 50rpx;
  background: #fff;
}

.content .btn image{width: 100%;height: 100%;}
.audio{padding-top: .3rem;background: #fff;}
.audio_box{width: 630rpx;margin: 0 auto 30rpx;border:1rpx solid #e5e5e5;background: #fbfbfb;
padding: 15rpx 30rpx;vertical-align: center;border-radius: 20rpx;height: 80rpx;line-height: 80rpx;}
.audio_box .close_audio{width: 27rpx;height: 27rpx;margin-right: 50rpx;float:left;display: block;margin-top: 28rpx;} 
.audio_box .line{width: 4rpx;height: 40rpx;background: #e5e5e5;margin-right: 30rpx;float: left;margin-top: 20rpx;}
.audio_box .wave{width: 35rpx;height: 30rpx;display: block;margin-right: 30rpx;float: left;
margin-top: 25rpx;} 
.audio_box .start_audio{width: 80rpx;height: 80rpx;float:right;margin-right: 50rpx;} 
.audio_box .duration{font-size: 30rpx;color: #666;line-height: 80rpx;float:left;}
.complete_audio{float: right;color: #3eccb3;}

.play_audio{width: 630rpx;margin: 0 auto 30rpx;border:1rpx solid #e5e5e5;background: #fbfbfb;
padding: 15rpx 30rpx;vertical-align: center;border-radius: 20rpx;height: 80rpx;line-height: 80rpx;
position: relative;}

.play_audio_left{width: 60rpx;height: 60rpx;float: left;margin-top: 10rpx;}
.play_audio_left image{width: 100%;height: 100%;}
.play_audio_right{margin-left: 105rpx;position: relative;top:-10rpx;}
.play_time{position: relative;top:-20rpx;font-size: 26rpx;color: #666;left:25rpx;}
.time_schedule{float:left;line-height: 30rpx;}
.play_dura{float:right;margin-right: 65rpx;line-height: 30rpx;}
.content .up-btn .btn{width: 120rpx;height: 120rpx;margin-right: 50rpx;display: inline-block;}
.delete_audio{position: absolute;right:-15rpx;top:-15rpx;width: 34rpx;height: 34rpx;z-index: 200;}
