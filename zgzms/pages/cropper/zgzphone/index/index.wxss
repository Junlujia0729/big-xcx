page{
  background: #f3f4f5;
}
.container{
    width: 690rpx;
    height: 100%;
    padding: 50rpx 30rpx 0;   
}

.avatar-container{
    position: relative;
    text-align: center;
    padding-top: 50%;
}


.avatar{
    width: 5rem;
    height: 5rem;
    background-color: #e5e5e5;
    border-radius: 50%;
}

.item{
    line-height: 3rem;
}

.pcture{
  width: 100%;
  background: #fff;
  padding:40rpx 0; 
  border:1px solid #eee;
  border-radius: 30rpx;
}
.pcture image{
  width: 281rpx;
  height: 363rpx;
  display: block;
  margin: 0 auto;
}
.pcture .choose-pic{
  width: 210rpx;
  height: 80rpx;
  background: #3eccb3;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  border-radius: 50rpx;
  margin: 40rpx auto 0;
}
.tips{
  padding: 50rpx 30rpx 0;
  font-size: 26rpx;
  line-height: 40rpx;
}
.tips view{
  padding-bottom: 20rpx;
  color: #666;

}